# Template des variables d'environnement pour BantuOps Backend
# Copiez ce fichier vers .env et remplissez les valeurs appropriées

# ================================
# CONFIGURATION DE BASE
# ================================
SPRING_PROFILES_ACTIVE=production
NODE_ID=node-prod-01
DATACENTER=dc1
RACK=rack1

# ================================
# CONFIGURATION DE LA BASE DE DONNÉES
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bantuops_db
DB_USERNAME=bantu_admin
DB_PASSWORD=Aurlin10

# Configuration du pool de connexions
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5
DB_POOL_IDLE_TIMEOUT=300000
DB_POOL_MAX_LIFETIME=1800000
DB_POOL_CONNECTION_TIMEOUT=30000
DB_POOL_LEAK_DETECTION=60000

# ================================
# CONFIGURATION REDIS
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGEME_REDIS_PASSWORD
REDIS_SSL=false

# ================================
# CONFIGURATION DE SÉCURITÉ
# ================================
# Clé JWT (doit être d'au moins 256 bits)
JWT_SECRET=CHANGEME_JWT_SECRET_KEY_MUST_BE_AT_LEAST_256_BITS_LONG_FOR_SECURITY

# Durées d'expiration des tokens (en secondes)
JWT_ACCESS_EXPIRATION=1800
JWT_REFRESH_EXPIRATION=604800
JWT_ISSUER=bantuops-api
JWT_AUDIENCE=bantuops-client

# Clé de chiffrement des données sensibles (32 caractères pour AES-256)
ENCRYPTION_KEY=CHANGEME_32_CHAR_ENCRYPTION_KEY_

# Algorithme de chiffrement
ENCRYPTION_ALGORITHM=AES/GCM/NoPadding

# ================================
# CONFIGURATION SSL/TLS
# ================================
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/app/ssl/keystore.p12
SSL_KEYSTORE_PASSWORD=CHANGEME_KEYSTORE_PASSWORD
SSL_KEYSTORE_TYPE=PKCS12
SSL_KEY_ALIAS=bantuops

# ================================
# CONFIGURATION DE L'ENTREPRISE
# ================================
COMPANY_NAME=BantuOps
COMPANY_ADDRESS=Dakar, Sénégal
COMPANY_NINEA=CHANGEME_NINEA_NUMBER
COMPANY_RCCM=CHANGEME_RCCM_NUMBER
COMPANY_PHONE=+221XXXXXXXXX
COMPANY_EMAIL=contact@bantuops.com

# ================================
# CONFIGURATION DES PORTS
# ================================
APP_PORT=8080
MANAGEMENT_PORT=8081
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ================================
# CONFIGURATION DU CACHE
# ================================
CACHE_TTL=1800000

# ================================
# CONFIGURATION DES SESSIONS
# ================================
SESSION_TIMEOUT=1800

# ================================
# CONFIGURATION CORS
# ================================
CORS_ALLOWED_ORIGINS=https://*.bantuops.com,https://bantuops.com

# ================================
# CONFIGURATION DE L'AUDIT
# ================================
AUDIT_RETENTION_DAYS=2555

# ================================
# CONFIGURATION DES ALERTES DE SÉCURITÉ
# ================================
SECURITY_ALERT_EMAIL=security@bantuops.com
SECURITY_ALERT_WEBHOOK=
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ================================
# CONFIGURATION DES LIMITES DE TAUX
# ================================
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=20

# ================================
# CONFIGURATION DU MONITORING
# ================================
API_DOCS_ENABLED=false
SWAGGER_UI_ENABLED=false

# ================================
# CONFIGURATION DES TIMEOUTS
# ================================
CONNECTION_TIMEOUT=20000
KEEP_ALIVE_TIMEOUT=20000
MAX_KEEP_ALIVE_REQUESTS=100

# ================================
# CONFIGURATION DE DÉPLOIEMENT
# ================================
# Version de l'application
APP_VERSION=1.0.0

# Environnement de déploiement
DEPLOYMENT_ENV=production

# Configuration des ressources
JAVA_OPTS=-Xmx2048m -Xms1024m -XX:+UseG1GC -XX:+UseContainerSupport

# Configuration de la surveillance
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ================================
# CONFIGURATION DE SAUVEGARDE
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=bantuops-backups
BACKUP_S3_REGION=eu-west-1

# ================================
# CONFIGURATION DE LOGGING
# ================================
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_HISTORY=30
LOG_TOTAL_SIZE_CAP=1GB